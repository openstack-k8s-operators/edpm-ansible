command: "{{ edpm_nova_nvme_cleaner_command }} {{ edpm_nova_nvme_cleaner_args }}"
config_files:
  - source: /var/lib/kolla/config_files/src/nova_shared/nova-blank.conf
    dest: /etc/nova/nova.conf
    owner: nova
    perm: "0600"
    optional: true
  - source: /var/lib/kolla/config_files/src/nova_shared/*nova*.conf
    dest: /etc/nova/nova.conf.d/
    owner: nova
    perm: "0600"
    optional: true
