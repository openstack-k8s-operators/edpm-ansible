command: "/bin/supervisord -c /etc/neutron/neutron_opflex_supervisord.conf"
config_files:
- source: "/var/lib/kolla/config_files/src/*"
  dest: "/"
  merge: true
  preserve_properties: true
permissions:
- path: /var/log/neutron
  owner: neutron:neutron
  recurse: true
- path: /run/opflex
  owner: neutron:neutron
  recurse: true
- path: /var/lib/neutron
  owner: neutron:neutron
  recurse: true