start_order: 1
image: "{{ edpm_swift_proxy_image }}"
net: host
pid: host
cgroupns: host
privileged: true
user: swift
restart: always
volumes:
  {% set edpm_swift_volumes = [] %}
  {%- set edpm_swift_volumes =
          edpm_swift_object_expirer_volumes +
          edpm_swift_storage_volumes %}
  {{ edpm_swift_volumes }}
environment:
  KOLLA_CONFIG_STRATEGY: COPY_ALWAYS
